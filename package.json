{
  "name": "erp",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm exec nx run-many --target=build",
    "format": "prettier  \"{apps,libs}/**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "pnpm format --check",
    "format:write": "pnpm format --write",
    "lint": "pnpm exec nx run-many --target=lint",
    "tsc": "pnpm exec nx run-many --target=tsc",
    "validate": "pnpm format:write",
    "prepare": "husky install",
    "preinstall": "node -e \"if (!require('child_process').execSync('pnpm -v', { stdio: 'ignore' })) throw new Error('Please install pnpm to proceed.');\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@erp/common": "workspace:^",
    "@erp/sample-lib": "workspace:^"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "nx": "19.8.2"
  }
}
